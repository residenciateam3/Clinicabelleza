---
const year = new Date().getFullYear();
---

<footer class="w-full border-t border-gray-200 bg-gradient-to-r from-pink-50 to-purple-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex flex-col items-center gap-6 text-gray-700">
    <!-- Redes -->
    <div class="flex gap-8">
      <!-- Facebook -->
      <a href="https://facebook.com" target="_blank" aria-label="Facebook"
         class="hover:scale-110 transition-transform duration-300">
        <svg class="w-7 h-7 text-blue-600 hover:text-blue-700" fill="currentColor" viewBox="0 0 24 24">
          <path d="M22.675 0H1.325C.593 0 0 .593 0 1.326V22.67c0 .73.593 1.324 1.325 1.324h11.495v-9.834H9.691V10.41h3.129V7.797c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.466.099 2.798.143v3.24l-1.922.001c-1.507 0-1.799.717-1.799 1.768v2.318h3.587l-.467 3.75h-3.12V24h6.116c.73 0 1.324-.594 1.324-1.325V1.326C24 .593 23.406 0 22.675 0z"/>
        </svg>
      </a>
      <!-- Instagram -->
      <a href="https://instagram.com" target="_blank" aria-label="Instagram"
         class="hover:scale-110 transition-transform duration-300">
        <svg class="w-7 h-7 text-pink-500 hover:text-pink-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7.5 2h9A5.5 5.5 0 0 1 22 7.5v9A5.5 5.5 0 0 1 16.5 22h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2zm0 2A3.5 3.5 0 0 0 4 7.5v9A3.5 3.5 0 0 0 7.5 20h9a3.5 3.5 0 0 0 3.5-3.5v-9A3.5 3.5 0 0 0 16.5 4h-9zm9.75 1.75a1.25 1.25 0 1 1 0 2.5 1.25 1.25 0 0 1 0-2.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 2a3 3 0 1 0 0 6 3 3 0 0 0 0-6z"/>
        </svg>
      </a>
      <!-- TikTok -->
      <a href="https://tiktok.com" target="_blank" aria-label="TikTok"
         class="hover:scale-110 transition-transform duration-300">
        <svg class="w-7 h-7 text-black hover:text-gray-800" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12.65 2c.3 2.6 2.3 4.7 4.9 5v3.3c-1.2-.1-2.4-.5-3.5-1.2v7.1a5.7 5.7 0 1 1-4.7-5.6v3.3c-.6-.2-1.3.2-1.5.8a1.6 1.6 0 0 0 1.6 2c.8 0 1.6-.6 1.6-1.5V2h1.6z"/>
        </svg>
      </a>
    </div>

    <!-- Línea inferior -->
    <div class="w-full flex flex-col md:flex-row items-center justify-between gap-4 text-sm">
      <p>© {year} Clínica Bella. Todos los derechos reservados.</p>
      <span class="font-semibold text-white px-3 py-1 rounded-lg bg-accent animate-pulse">By Team 3</span>
    </div>
  </div>
</footer>
